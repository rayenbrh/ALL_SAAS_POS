# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/saas_pos
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/saas_pos?retryWrites=true&w=majority

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS
FRONTEND_URL=http://localhost:3000

# File Upload - Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Payment Gateway APIs (Tunisian)
# D17 Payment Gateway
D17_API_KEY=your-d17-api-key
D17_API_SECRET=your-d17-secret
D17_WEBHOOK_SECRET=your-d17-webhook-secret

# Flouci Mobile Wallet
FLOUCI_APP_TOKEN=your-flouci-token
FLOUCI_APP_SECRET=your-flouci-secret

# Edinar E-Payment
EDINAR_API_KEY=your-edinar-key
EDINAR_API_SECRET=your-edinar-secret

# SMS Provider (Optional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+21612345678

# Application Settings
APP_NAME=POS Platform
DEFAULT_CURRENCY=TND
DEFAULT_LANGUAGE=fr
DEFAULT_TIMEZONE=Africa/Tunis

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session & Security
SESSION_SECRET=your-session-secret-change-this
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
